// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Prisma будет брать ключ из переменных окружения
}

// Наша модель (таблица) для хранения долгов
model Debt {
  id              Int      @id @default(autoincrement())
  telegramUserId  String   @map("telegram_user_id")
  amount          Float
  description     String
  issuedAt        DateTime @default(now()) @map("issued_at") // Новое поле для даты выдачи
  createdAt       DateTime @default(now()) @map("created_at")
  status          String   @default("UNPAID") // Новое поле для статуса
}